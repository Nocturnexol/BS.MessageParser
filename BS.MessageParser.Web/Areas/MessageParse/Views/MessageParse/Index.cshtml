@using Bs.MessageParser.Tool.Common
@{
    ViewBag.Title = "报文解析";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    #content {
        height: 355px;
        border: solid #ccc 1px;
        border-radius: 4px;
        overflow: auto;
        width: 97.7%;
        margin-top: 15px;
        margin-left: 15px;
        margin-right: 15px;
        padding-top: 5px;
        padding-bottom: 5px;
        font-size: 14px;
    }
</style>
<div class="form-group form-groupm">
    <div class="col-sm-12">
        <label>
            输入报文：
        </label>
        @Html.TextArea("msg", "",new { placeholder = "报文", @class = "form-control",rows=3})
        <br />
        <button id="parse" class="btn btn-success">解析</button>
        <button id="clear" class="btn btn-danger">清空</button>
        <a id="locate" class="btn btn-warning hidden" target="_blank">定位</a>
    </div>
</div>
<div id="content" class="col-sm-12"></div>

<script>
    $('#parse').click(function() {
        var c = $('#msg').val().trim();
        if (c !== '') {
            $.ajax({
                url: "/MessageParse/MessageParse/Parse",
                type: "POST",
                data: { msg: c },
                success: function(n) {
                    if (n.IsSuccess){
                        $('#content').html((('[' + (new Date()).Format("yyyy-MM-dd hh:mm:ss.S") + ']----------------,' + n.Message).replace(/,/g, "<br/>") + '<br/>') + $('#content').html());
                        if (n.Text) {
                            var txt = $.parseJSON(n.Text);
                            $('#locate').attr('href',
                                "/MessageParse/MessageParse/Locate?lon=" + txt.Longitude+ "&lat=" + txt.Latitude);
                            $('#locate').removeClass('hidden');
                        } else {
                            $('#locate').addClass('hidden');
                        }
                    }
                    else
                        layer.alert("解析失败：" + n.Message, { icon: 2 });
                }
            });
        } else {
            layer.alert("报文不能为空！", { icon: 2 });
        }
    });

    $('#msg').mouseover(function() {
        $(this).focus().select();
    });

    $('#clear').click(function() {
        $('#content').html('');
        $('#msg').val('');
       if (!$('#locate').is(":hidden")) {
           $('#locate').addClass('hidden');
       }
    });

    // 对Date的扩展，将 Date 转化为指定格式的String   
    // 月(M)、日(d)、小时(h)、分(m)、秒(s)、季度(q) 可以用 1-2 个占位符，   
    // 年(y)可以用 1-4 个占位符，毫秒(S)只能用 1 个占位符(是 1-3 位的数字)   
    // 例子：   
    // (new Date()).Format("yyyy-MM-dd hh:mm:ss.S") ==> 2006-07-02 08:09:04.423   
    // (new Date()).Format("yyyy-M-d h:m:s.S")      ==> 2006-7-2 8:9:4.18   
    Date.prototype.Format = function (fmt) { //author: meizz   
        var o = {
            "M+": this.getMonth() + 1,                 //月份   
            "d+": this.getDate(),                    //日   
            "h+": this.getHours(),                   //小时   
            "m+": this.getMinutes(),                 //分   
            "s+": this.getSeconds(),                 //秒   
            "q+": Math.floor((this.getMonth() + 3) / 3), //季度   
            "S": this.getMilliseconds()             //毫秒   
        };
        if (/(y+)/.test(fmt))
            fmt = fmt.replace(RegExp.$1, (this.getFullYear() + "").substr(4 - RegExp.$1.length));
        for (var k in o)
            if (new RegExp("(" + k + ")").test(fmt))
                fmt = fmt.replace(RegExp.$1, (RegExp.$1.length == 1) ? (o[k]) : (("00" + o[k]).substr(("" + o[k]).length)));
        return fmt;
    }
</script>